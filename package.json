{
  "name": "care-network-core",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/app/infrastructure/index.ts",
    "watch": "nodemon -e ts -w ./src/app/infrastructure -x npm run watch:serve",
    "watch:serve": "ts-node src/app/infrastructure/index.ts",
    "test": "mocha -r ts-node/register tests/**/*.test.ts",
    "coverage": "nyc -r lcov -e .ts -x \"*.test.ts\" npm run test",
    "lint": "tslint --project tsconfig.json"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/chai": "^4.2.3",
    "@types/config": "^0.0.34",
    "@types/graphql": "^14.2.0",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.5.3",
    "@types/node": "^12.0.4",
    "chai": "^4.2.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "mocha": "^6.2.3",
    "mongodb-memory-server": "^5.2.6",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@accounts/database-manager": "^0.13.0",
    "@accounts/graphql-api": "^0.19.0",
    "@accounts/mongo": "^0.13.0",
    "@accounts/password": "^0.13.0",
    "@accounts/server": "^0.19.0",
    "@graphql-modules/core": "^0.7.12",
    "apollo-server": "^2.25.4",
    "apollo-server-express": "^2.14.2",
    "dotenv": "^8.1.0",
    "graphql": "^14.3.1",
    "graphql-toolkit": "^0.5.15",
    "inversify": "^5.0.1",
    "mongoose": "^5.7.5",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^0.17.6",
    "typegoose": "^5.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ],
    "{src,tests}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  }
}
